{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	<div class="container py-3 py-md-5 col-4 m-auto">
		<div class="mb-5 text-center">{% include 'components/logo.html.twig' %}</div>
		<h4 class="mb-3">Se connecter</h4>
		<form method="POST">
			<div>
				<label class="form-label">Votre email</label>
				<input type="email" class="form-control" name="email" value="{{ email }}"/>
			</div>

			<div>
				<label class="form-label">Votre mot de passe</label>
				<input type="password" class="form-control" name="password" value="{{ password }}"/>
			</div>

			<div class="my-3 d-flex">
                <button class="btn btn-primary col">Se connecter</button>
			</div>
		</form>
		<p>
			<a href="{{ base_path }}/password-reset">Vous avez oubli√© votre mot de passe ?</a>
		</p>
	</div>
{% endblock %}
